{
  "name": "xstate-audition",
  "version": "2.0.1",
  "type": "module",
  "description": "Test helpers for XState v5+",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/xstate-audition.git"
  },
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.2.0"
  },
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "types": "./dist/commonjs/index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "src",
    "LICENSE"
  ],
  "keywords": [
    "xstate",
    "test",
    "testing",
    "actor",
    "state",
    "state-machine",
    "jest",
    "mocha",
    "vitest",
    "ava",
    "tap",
    "statechart",
    "statecharts"
  ],
  "scripts": {
    "build": "tshy",
    "build:docs": "typedoc",
    "check": "npm test && npm run test:types && npm run lint && npm run lint:knip && npm run lint:md && npm run lint:spelling",
    "dev": "tshy --watch",
    "dev:docs": "run-p \"docs:*\"",
    "dev:types": "tsc -p tsconfig.tsc.json --watch",
    "docs:serve": "serve docs",
    "docs:watch": "typedoc --watch",
    "format": "prettier .",
    "lint": "eslint . --max-warnings 0",
    "lint:commit": "commitlint",
    "lint:fix": "eslint . --fix && prettier --write .",
    "lint:knip": "knip",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \".github/**/*.md\"",
    "lint:spelling": "cspell \"**\" \".github/**/*\"",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "test": "node --test --import tsx \"./test/*.spec.ts\"",
    "test:compat": "tsx ./test/xstate-compat.ts",
    "test:coverage": "c8 npm test",
    "test:types": "tsc -p tsconfig.tsc.json"
  },
  "peerDependencies": {
    "xstate": ">=5.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.12.0",
    "@stylistic/eslint-plugin": "2.9.0",
    "@types/eslint__js": "8.42.3",
    "@types/node": "20.16.11",
    "@types/semver": "7.5.8",
    "c8": "10.1.2",
    "cspell": "8.14.4",
    "eslint": "9.12.0",
    "eslint-plugin-n": "17.11.1",
    "eslint-plugin-perfectionist": "3.8.0",
    "expect-type": "1.0.0",
    "husky": "9.1.6",
    "knip": "5.33.2",
    "lint-staged": "15.2.10",
    "markdownlint-cli2": "0.14.0",
    "markdownlint-cli2-formatter-pretty": "0.0.7",
    "npm-run-all2": "6.2.3",
    "prettier": "3.3.3",
    "prettier-plugin-curly": "0.2.2",
    "prettier-plugin-jsdoc": "1.3.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-pkg": "0.18.1",
    "semver": "7.6.3",
    "serve": "14.2.3",
    "tshy": "3.0.2",
    "tsx": "4.19.1",
    "typedoc": "0.26.8",
    "typedoc-github-theme": "0.1.2",
    "typedoc-plugin-mdn-links": "3.3.2",
    "typescript": "5.6.3",
    "typescript-eslint": "8.8.1",
    "xstate": "5.18.2",
    "zx": "8.1.9"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ],
      "footer-max-line-length": [
        0
      ],
      "header-max-length": [
        0
      ],
      "subject-case": [
        0
      ],
      "subject-full-stop": [
        0
      ]
    }
  },
  "knip": {
    "entry": [
      "src/index.ts",
      "test/**/*.spec.ts"
    ],
    "ignoreDependencies": [
      "markdownlint-cli2-formatter-pretty"
    ],
    "ignoreExportsUsedInFile": {
      "interface": true,
      "type": true
    },
    "project": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write",
      "cspell lint --no-must-find-files"
    ],
    "*.md": "markdownlint-cli2",
    "*.ts": "eslint --fix"
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  }
}
